#!/bin/bash

APP_PATH=<%= node[:spray][:path] + '/' + node[:spray][:app][:name] =%>

JAR="<%= node[:spray][:app][:name] + '_' + node[:spray][:scala][:version] + '-' + node[:spray][:app][:version] + '.jar' =%>"

OPTION="<%= node[:spray][:java][:option] + ' -XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=' + node[:spray][:path] + '/' + node[:spray][:app][:name] + '/java_pid<pid>.hprof' =%>"


cd ${APP_PATH}


do_start() {
    exec java -jar ${APP_PATH}/${JAR} ${OPTION} > /dev/null 2>&1 &
}

do_stop() {
    pid=`ps aux | grep <%= node[:spray][:app][:name] =%> | grep -v 'grep' | awk '{print $2}'`
    if [[ -n "$pid" ]]; then
        kill -9 $pid
    fi
}


case $1 in
    start)
        do_start
        ;;
    stop)
        do_stop
        ;;
    restart)
        do_stop
        do_start
        ;;
esac
exit 0